{
    "manifest_version": 2,


    "name": "FindR",
    "description": "Searches the images on the current active tab based on content as well as text(if it contains any)",
    "version": "1.0",

    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["js/jquery-1.11.3.min.js"]
        }
    ],

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title" : "FindR"
     },

    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/"
    ],

    "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+I",
        "mac": "MacCtrl+Shift+F"
      }
    }
  } 
}
